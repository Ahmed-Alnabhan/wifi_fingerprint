<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_begin="192dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        app:layout_constraintGuide_begin="473dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="473dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_save_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@string/save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btn_file_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_marginLeft="183dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="183dp" />

    <TextView
        android:id="@+id/txt_file_type_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_type"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.991"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/spinner_file_type_value"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.111" />

    <TextView
        android:id="@+id/txt_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_name"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_file_type_file"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.991" />

    <EditText
        android:id="@+id/et_file_name_value"
        android:layout_width="@dimen/dimen_142_dp"
        android:layout_height="@dimen/dimen_60_dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/file_name_hint"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_file_type_value"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.147" />

    <TextView
        android:id="@+id/txt_file_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_file_location_label"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_file_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.991" />

    <TextView
        android:id="@+id/txt_default_file_location_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/default_file_location_value"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_file_name_value"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/txt_change_file_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_file_location"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_file_location"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btn_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_default_file_location_value"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.056" />

    <TextView
        android:id="@+id/txt_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25"
        android:textSize="@dimen/size_75_sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_change_file_location"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline14" />
</android.support.constraint.ConstraintLayout>