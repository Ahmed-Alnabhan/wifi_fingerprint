<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/no_connection_message_gradient">

    <TextView
        android:id="@+id/scanning_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanning_duration"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline11"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline23"
        app:layout_constraintVertical_bias="0.09" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        app:layout_constraintGuide_begin="192dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/scanning_duration_spinner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:ms_multiline="false"
        app:ms_hint="@string/duration"
        app:ms_enableFloatingLabel="false"
        app:ms_enableErrorLabel="false"
        app:ms_floatingLabelText="floating label"
        app:ms_baseColor="@color/wifi_light_gray"
        app:ms_highlightColor="@color/wifi_dark_gray"
        app:ms_thickness="1dp"
        app:ms_arrowColor="@color/early_night_blue"
        app:ms_arrowSize="16dp"
        app:ms_alignLabels="true"
        app:ms_floatingLabelColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintHorizontal_bias="0.12"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline23"
        app:layout_constraintVertical_bias="1.0" />

<TextView
    android:id="@+id/location_name_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/location_name"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/guideline11"
    android:layout_marginRight="8dp"
    app:layout_constraintHorizontal_bias="1.0"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline22"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="@+id/guideline23"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="0.101" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/location_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        android:textColor="@color/wifi_light_gray"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline22"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline23"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.07" />

<Button
    android:id="@+id/cancel_location_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/cancel"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="159dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/guideline22"
    android:layout_marginTop="8dp"
    android:layout_marginStart="159dp"
    app:layout_constraintVertical_bias="0.15"
    android:theme="@style/MyButton"
    style="@style/Widget.AppCompat.Button.Borderless"/>

<Button
    android:id="@+id/save_location_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/save"
    app:layout_constraintLeft_toRightOf="@+id/cancel_location_dialog"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.151"
    app:layout_constraintBottom_toBottomOf="@+id/cancel_location_dialog"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="@+id/guideline22"
    android:layout_marginTop="8dp"
    app:layout_constraintVertical_bias="1.0"
    android:theme="@style/MyButton"
    style="@style/Widget.AppCompat.Button.Borderless" />

<android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline22"
    app:layout_constraintGuide_begin="483dp"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="483dp"
    tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline23"
        app:layout_constraintGuide_begin="95dp"
        android:orientation="horizontal" />
</android.support.constraint.ConstraintLayout>