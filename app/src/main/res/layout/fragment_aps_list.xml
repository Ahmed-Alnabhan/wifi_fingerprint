<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ap_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.elearnna.www.wififingerprint.fragments.APsListFragment">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/no_connection_message_gradient">
    <TextView
        android:id="@+id/txt_wifi_not_connected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_connection"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/dimen_18_sp"
        android:paddingTop="@dimen/dimen_24_dp"
        android:paddingBottom="@dimen/dimen_16_dp"
        android:visibility="gone"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:elevation="@dimen/dimen_4_dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <FrameLayout
        android:id="@+id/ap_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/ap_item"/>
    </FrameLayout>
    </FrameLayout>
    <ProgressBar
        android:id="@+id/aps_loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:indeterminate="true"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline9"
        app:layout_constraintGuide_begin="109dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="109dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_aps_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:layout_constraintVertical_bias="0.0"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
