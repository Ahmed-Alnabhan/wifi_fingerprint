<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/no_connection_message_gradient">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        app:layout_constraintGuide_begin="209dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/btn_save_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_16_dp"
        android:text="@string/save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        android:layout_marginTop="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_16_dp"
        android:theme="@style/MyButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintVertical_bias="0.348" />

    <Button
        android:id="@+id/btn_file_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        android:layout_marginTop="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_0_dp"
        android:theme="@style/MyButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        android:layout_marginLeft="@dimen/dimen_0_dp"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/txt_file_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_type"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_58_dp"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintHorizontal_bias="0.991"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline24" />

    <TextView
        android:id="@+id/txt_file_type_value"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/file_type_json"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_58_dp"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline24"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp" />

    <TextView
        android:id="@+id/txt_file_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_name"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintTop_toTopOf="@+id/guideline24"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        app:layout_constraintVertical_bias="0.666" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_file_name_value"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/wifi_light_gray"
        android:hint="@string/file_name_hint"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/guideline24"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_file_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_file_location_label"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline12"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        android:layout_marginRight="@dimen/dimen_8_dp"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintVertical_bias="0.04"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp" />

    <TextView
        android:id="@+id/txt_default_file_location_value"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        tools:text="@string/default_file_location_value"
        android:layout_marginLeft="@dimen/dimen_12_dp"
        android:layout_marginStart="@dimen/dimen_12_dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline12"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        android:layout_marginRight="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/txt_countdown_timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="25"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_100_sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.214" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline24"
        app:layout_constraintGuide_begin="63dp"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline25"
        app:layout_constraintGuide_begin="126dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>